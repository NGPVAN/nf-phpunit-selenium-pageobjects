<?xml version="1.0" encoding="UTF-8"?>
<package packagerversion="1.4.10" version="2.0"
  xmlns="http://pear.php.net/dtd/package-2.0"
  xmlns:tasks="http://pear.php.net/dtd/tasks-1.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://pear.php.net/dtd/tasks-1.0
                      http://pear.php.net/dtd/tasks-1.0.xsd
                      http://pear.php.net/dtd/package-2.0
                      http://pear.php.net/dtd/package-2.0.xsd">
    <name>PHPUnit_SeleniumPageObject</name>
    <channel>nationalfield.github.com</channel>
    <summary>Simple PageObject Constructs for Functional testing</summary>
    <description>Library that allows for easier implementation of Selenium PageObjects in PHPUnit.</description>
    <lead>
        <name>Graham Christensen</name>
        <user>gchristensen</user>
        <email>gchristensen@nationalfield.org</email>
        <active>yes</active>
    </lead>
    <date>2011-04-19</date>
    <version>
        <release>0.0.2</release>
        <api>0.0.2</api>
    </version>
    <stability>
        <release>alpha</release>
        <api>alpha</api>
    </stability>
    <license>BSD License</license>
    <notes>Initial release.</notes>
    <contents>
        <dir name="/">
            <dir name="PHPUnit">
                <dir name="Extensions">
                    <dir name="SeleniumPageObject">
                        <file baseinstalldir="/" name="Model.php" role="php">
                            <tasks:replace from="@package_version@" to="version" type="package-info" />
                        </file>
                    </dir>
                    <file baseinstalldir="/" name="SeleniumPageObject.php" role="php">
                        <tasks:replace from="@package_version@" to="version" type="package-info" />
                    </file>
                </dir>
            </dir>
            <file baseinstalldir="/" name="LICENSE" role="doc"/>
        </dir>
    </contents>
    <dependencies>
        <required>
            <php>
                <min>5.3.0</min>
            </php>
            <pearinstaller>
                <min>1.9.2</min>
            </pearinstaller>
            <package>
                <name>PHPUnit_Selenium</name>
                <channel>pear.phpunit.de</channel>
                <min>1.0.2</min>
            </package>
        </required>
    </dependencies>
    <phprelease/>
</package>
